// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  type        String    @default("button-down")
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  variants    Variant[]
}

model Variant {
  id               String     @id @default(cuid())
  productId        String
  product          Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  size             String
  color            String?
  sku              String?
  cost             Int?       // cents
  price            Int?       // cents
  quantityOnHand   Int        @default(0)
  quantityReserved Int        @default(0)
  quantitySold     Int        @default(0)
  lastRestockedAt  DateTime?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  saleItems        SaleItem[]

  @@unique([productId, size, color])
}

model OrderRequest {
  id                String              @id @default(cuid())
  createdAt         DateTime            @default(now())
  customerName      String
  email             String
  phone             String?
  productSlug       String
  variantSize       String
  quantity          Int                 @default(1)
  fulfillmentMethod FulfillmentMethod   @default(PICKUP)
  shippingAddress   String?
  notes             String?
  status            OrderRequestStatus  @default(NEW)
  updatedAt         DateTime            @updatedAt
}

enum FulfillmentMethod {
  PICKUP
  DELIVERY
  SHIPPING
}

enum OrderRequestStatus {
  NEW
  CONFIRMED
  CLOSED
}

model Sale {
  id           String      @id @default(cuid())
  createdAt    DateTime    @default(now())
  channel      SaleChannel @default(WEBSITE)
  customerName String?
  email        String?
  total        Int?        // cents
  notes        String?
  lineItems    SaleItem[]
  updatedAt    DateTime    @updatedAt
}

enum SaleChannel {
  WEBSITE
  INSTAGRAM
  POPUP
  OTHER
}

model SaleItem {
  id        String   @id @default(cuid())
  saleId    String
  sale      Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  variantId String
  variant   Variant  @relation(fields: [variantId], references: [id])
  quantity  Int      @default(1)
  unitPrice Int?     // cents
  createdAt DateTime @default(now())
}

model AdminSession {
  id        String   @id @default(cuid())
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}
