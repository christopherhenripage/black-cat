# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Email Configuration (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY=
ORDER_TO_EMAIL=orders@blackcatbuttondown.com

# Alternative: SMTP Configuration (Nodemailer)
# Uncomment and fill these if using SMTP instead of Resend
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Analytics (Optional)
# Set your Plausible domain to enable analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=blackcatbuttondown.com

# Database Configuration
# SQLite (default for local dev):
DATABASE_URL="file:./dev.db"
# For production, use PostgreSQL:
# DATABASE_URL="postgresql://user:password@host:5432/database"

# Admin Authentication
# Set a strong password for admin access
ADMIN_PASSWORD=changeme
# Secret for signing session cookies (generate with: openssl rand -base64 32)
INVENTORY_SESSION_SECRET=your-secret-key-change-in-production
